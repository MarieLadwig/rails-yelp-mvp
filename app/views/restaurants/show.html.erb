<div class="container">

<div class="restaurant-header">
  <h1><%= @restaurant.name %></h1>
  <h1><%= '★'*@average_review %></h1>
</div>

<p>Cuisine: <%= @restaurant.category %></p>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>

<div class="reviews-card">
  <div class="review-title">
    <h3>Reviews</h3>
    <h3>(<%= @count_reviews %>) </h3>
  </div>
    <% @restaurant.reviews.each do |review|%>
      <div class="review">
        <p> <%= review.content %></p>
        <span> <%= '★'*review.rating %> </span>
      </div>
    <% end %>
</div>

<div class="add-reviews">
<h3>Add your review for <%= @restaurant.name %></h3 >

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content, placeholder: 'Your review' %>
  <%= f.input :rating, hint: 'give a rating between 0-5', collection: [['0', '-'], ['1', '★'], ['2', '★★'], ['3', '★★★'], ['4', '★★★★'], ['5', '★★★★★']], label_method: :second, value_method: :first %>
  <%= f.button :submit, class: 'btn btn-light' %>
<% end %>
</div>


<div> <%= link_to 'All restaurants', restaurants_path, class: 'btn btn-secondary' %> </div>

</div>
