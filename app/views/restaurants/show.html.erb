<div class="container">
<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<h2>Reviews (Average rating: <%= '⭐️'*@average_review %>)</h2>
  <% @restaurant.reviews.each do |review|%>
    <div class="review">
      <p> <%= review.content %> <span> <%= '⭐️'*review.rating %> </span> </p>
    </div>
  <% end %>

<h3>Add your review for <%= @restaurant.name %></h3 >

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, hint: 'give a rating between 0-5' %>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>

<br>
<br>

<div> <%= link_to 'All restaurants', restaurants_path, class: 'btn btn-primary' %> </div>

</div>
